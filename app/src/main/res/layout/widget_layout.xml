<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/p40white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cardll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:id="@+id/card_menu1"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ignore"
                android:layout_centerInParent="true"
                android:textColor="@color/ignore_color"
                android:textSize="13dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/card1"
            android:background="@color/rgk_hint_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardll1"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:id="@+id/card_menu2"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ignore"
                android:layout_centerInParent="true"
                android:textColor="@color/ignore_color"
                android:textSize="13dp" />
        </RelativeLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/diliver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/cardll2"
        android:background="@color/rgk_hint_text" />

    <LinearLayout
        android:id="@+id/show_more_cards"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/transparent"
        android:layout_below="@+id/diliver">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/show_more"
            android:textColor="@color/rgk_primary_orange" />
    </LinearLayout>
</RelativeLayout>