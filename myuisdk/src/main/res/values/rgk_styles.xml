<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Global Theme Styles -->
    <eat-comment />
    <style name="RGK.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/rgk_primary_text</item>
        <item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="android:textColorHint">@color/rgk_secondary_text</item>
        <item name="android:textColorLink">?android:attr/textColorLink</item>
        <item name="android:textSize">@dimen/rgk_text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawablePadding">@dimen/rgk_text_padding</item>
    </style>
    <style name="RGK.TextAppearance.Small">
        <item name="android:textSize">@dimen/rgk_text_size_small</item>
    </style>
    <style name="RGK.TextAppearance.Medium">
        <item name="android:textSize">@dimen/rgk_text_size_normal</item>
    </style>
    <style name="RGK.TextAppearance.Title">
        <item name="android:textSize">@dimen/rgk_title_layout_subject_text_size</item>
        <item name="android:textColor">@color/rgk_title_layout_subject_text_color</item>
    </style>
    <style name="RGK.TextAppearance.subTitle">
        <item name="android:textSize">@dimen/rgk_title_layout_sub_subject_text_size</item>
        <item name="android:textColor">@color/rgk_title_layout_sub_subject_text_color</item>
    </style>
    <style name="RGK.TextAppearance.TitleButton">
        <item name="android:textSize">@dimen/rgk_title_layout_button_text_size</item>
        <item name="android:textColor">@color/rgk_title_layout_button_text_color</item>
    </style>
    <style name="RGK.TextAppearance.Large">
        <item name="android:textSize">@dimen/rgk_text_size_large</item>
    </style>
    <style name="RGK.TextAppearance.Smallest">
        <item name="android:textSize">@dimen/rgk_text_size_smallest</item>
    </style>

    <style name="RGK.TextAppearance.ActionBar">
        <item name="android:textSize">@dimen/rgk_title_layout_subject_text_size</item>
        <!--<item name="android:textColor">@color/rgk_actionbar_title_text</item>-->
    </style>

    <style name="RGK.EditText" parent="android:Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/rgk_bg_edit_text</item>-->
        <item name="android:textAppearance">@style/RGK.TextAppearance.Medium</item>
        <item name="android:textColor">@drawable/rgk_text_bg_edit_text</item>
        <item name="android:textColorHint">@color/rgk_secondary_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RGK.AppCompatToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/RGK.TextAppearance.Title</item>
        <item name="subtitleTextAppearance">@style/RGK.TextAppearance.subTitle</item>
        <item name="android:minHeight">@dimen/rgk_action_bar_height</item>
        <item name="titleMargin">4dp</item>
        <item name="maxButtonHeight">@dimen/rgk_action_bar_height</item>
        <item name="buttonGravity">top</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="RGK.Toolbar" parent="@android:style/Widget.Material.Toolbar">
        <item name="android:titleTextAppearance">@style/RGK.TextAppearance.Title</item>
        <item name="android:subtitleTextAppearance">@style/RGK.TextAppearance.subTitle</item>
        <item name="android:minHeight">@dimen/rgk_action_bar_height</item>
        <item name="android:maxButtonHeight">@dimen/rgk_action_bar_height</item>
        <item name="android:contentInsetStart">@dimen/rgk_list_item_padding_left</item>
    </style>

    <!-- ActionBar Styles -->
    <eat-comment />
    <style name="RGK.ActionMode" parent="android:Widget.Material.ActionMode">
        <item name="android:titleTextStyle">@style/RGK.TextAppearance.ActionBar</item>
        <item name="android:background">@color/rgk_title_layout_background</item>
        <item name="android:backgroundSplit">@color/rgk_title_layout_background</item>
    </style>
    <style name="RGK.AppCompat.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/RGK.TextAppearance.ActionBar</item>
        <item name="background">@color/rgk_title_layout_background</item>
        <item name="backgroundSplit">@color/rgk_title_layout_background</item>
    </style>
    <style name="RGK.ActionBar" parent="android:Widget.Material.ActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/RGK.TextAppearance.ActionBar</item>
        <item name="android:background">@color/rgk_title_layout_background</item>
        <item name="android:backgroundStacked">@color/rgk_title_layout_background</item>
        <item name="android:backgroundSplit">@color/rgk_title_layout_background</item>
        <item name="android:height">@dimen/rgk_action_bar_height</item>
        <item name="android:elevation">0dp</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>
    <style name="RGK.AppCompat.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">homeAsUp|showTitle</item>
        <item name="titleTextStyle">@style/RGK.TextAppearance.ActionBar</item>
        <item name="background">@color/rgk_title_layout_background</item>
        <item name="backgroundStacked">@color/rgk_title_layout_background</item>
        <item name="backgroundSplit">@color/rgk_title_layout_background</item>
        <item name="height">@dimen/rgk_action_bar_height</item>
        <item name="elevation">0dp</item>
        <item name="icon">@android:color/transparent</item>
    </style>
    <style name="RGK.ActionButton.Overflow" parent="android:Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/rgk_ic_overflow_menu</item>
        <item name="android:background">@null</item>
    </style>
    <style name="RGK.AppCompat.ActionButton.Overflow" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="srcCompat">@drawable/rgk_ic_overflow_menu</item>
        <item name="background">@null</item>
    </style>
    <style name="RGK.ActionButton.Overflow.Light" parent="@style/RGK.ActionButton.Overflow">
        <item name="android:src">@drawable/rgk_ic_overflow_menu_light</item>
    </style>

    <!-- Preference Styles -->
    <eat-comment />
    <style name="RGK">
    </style>

    <style name="RGK.Preference">
        <item name="android:layout">@layout/rgk_preference</item>
    </style>

    <style name="RGK.Preference.Category">
        <item name="android:layout">@layout/rgk_preference_category</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="RGK.Preference.Switch">
        <item name="android:widgetLayout">@layout/rgk_preference_widget_switch</item>
        <item name="android:switchTextOn">@string/rgk_blank</item>
        <item name="android:switchTextOff">@string/rgk_blank</item>
    </style>

    <style name="RGK.Preference.CheckBox">
        <item name="android:widgetLayout">@layout/rgk_preference_widget_checkbox</item>
    </style>

    <style name="RGK.Preference.Dialog">
        <item name="android:layout">@layout/rgk_preference</item>
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="RGK.Preference.Dialog.YesNoPreference">
        <item name="android:positiveButtonText">@android:string/yes</item>
        <item name="android:negativeButtonText">@android:string/no</item>
    </style>

    <style name="RGK.EditTextPreference" parent="@*android:style/Preference.Material.DialogPreference.EditTextPreference">
        <!--<item name="android:dialogLayout">@layout/rgk_preference_dialog_edittext</item>-->
        <item name="android:layout">@layout/rgk_preference</item>
    </style>

    <style name="RGK.RingtongPreference" parent="@*android:style/Preference.Material.RingtonePreference">
        <item name="android:layout">@layout/rgk_preference</item>
        <item name="android:ringtoneType">ringtone</item>
        <item name="android:showSilent">true</item>
        <item name="android:showDefault">true</item>
        <!--<item name="android:showMore">false</item>-->
    </style>

