    </style>

    <style name="RGK.Switch" parent="@android:Widget.Material.CompoundButton.Switch">
        <item name="android:track">@drawable/rgk_switch_track_material</item>
        <item name="android:thumb">@drawable/rgk_switch_thumb_anim</item>
        <item name="android:switchMinWidth">44dip</item>
    </style>

    <style name="RGK.AppCompatSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/rgk_switch_track_material</item>
        <item name="android:thumb">@drawable/rgk_switch_thumb_anim</item>
        <item name="switchTextAppearance">@style/RGK.TextAppearance.Medium</item>
    </style>

    <style name="RGK.ProgressBar.Horizontal" parent="@android:Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/rgk_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/rgk_progress_indeterminate_horizontal</item>
        <item name="android:minHeight">@dimen/progressbar_height_small</item>
        <item name="android:maxHeight">@dimen/progressbar_height_large</item>
    </style>

    <style name="RGK.SeekBar" parent="@android:style/Widget.Material.Light.SeekBar">
