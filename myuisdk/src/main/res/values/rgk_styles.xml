    <style name="RGK.RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rgk_btn_radio</item>
        <item name="android:textAppearance">@style/RGK.TextAppearance.Medium</item>
    </style>

    <style name="RGK.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/rgk_btn_check</item>
        <item name="android:textAppearance">@style/RGK.TextAppearance.Medium</item>
