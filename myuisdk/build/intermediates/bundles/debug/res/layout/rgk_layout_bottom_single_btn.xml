<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rgk_bottom_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical" >

    <View
        android:id="@+id/rgk_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rgk_divider_height"
        android:background="@color/rgk_divider"
        android:focusable="false"
        android:visibility="gone">
    </View>

    <LinearLayout
        android:id="@+id/rgk_bottom_buttons_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rgk_bottom_button_height"
        android:background="@color/rgk_action_button_background"
        android:paddingLeft="@dimen/rgk_bottom_button_margin"
        android:paddingStart="@dimen/rgk_bottom_button_margin"
        android:paddingRight="@dimen/rgk_bottom_button_margin"
        android:paddingEnd="@dimen/rgk_bottom_button_margin"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rgk_bottom_button_single"
            style="@style/RGK.BottomButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@android:string/ok" />

    </LinearLayout>

</LinearLayout>